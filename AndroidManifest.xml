<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olamic.androidtest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.olamic.androidtest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.olamic.androidtest.ShotMeter"
            android:label="@string/title_activity_shot_meter" >
        </activity>
        <activity
            android:name="com.olamic.androidtest.AnimationTutorial"
            android:label="@string/title_activity_animation_tutorial"
            android:parentActivityName="com.olamic.androidtest.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.olamic.androidtest.MainActivity" />
        </activity>
        <activity
            android:name="com.olamic.androidtest.CrossHair"
            android:label="@string/title_activity_cross_hair"
            android:parentActivityName="com.olamic.androidtest.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.olamic.androidtest.MainActivity" />
        </activity>
    </application>

</manifest>
